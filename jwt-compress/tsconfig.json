{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "ES6",
    "rootDirs": ["src", "tests"],
    "baseUrl": "./src",
    "allowJs": true,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules"]
}